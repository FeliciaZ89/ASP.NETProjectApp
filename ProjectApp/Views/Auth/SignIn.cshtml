@using Infrastructure.Models;

@model SignInViewModel
@{
    ViewData["Title"] = "Sign in to your account";
}

<section id="signin">
    <div class="container">
       
        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert">
                    @Model.ErrorMessage
                </div>
            }
            <h1>Welcome Back</h1>
            <p>Don't have an account yet?<a asp-controller="Auth" asp-action="SignUp"> Sign up here</a>.</p>
            <div class="content">
               
                <div id="form-email" class="input-group">
                    <label asp-for=Email> </label>
                    <span asp-validation-for="Email"></span>
                    <input asp-for="Email" />
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for=Password> </label>
                    <span asp-validation-for="Password"></span>
                    <input asp-for="Password" />
                </div>
               
                <div id="form-remember" class="checkbox">
                    <div class="check-box-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
                <button id="form-button" class="btn-theme-s" type="submit">Sign in</button>
                <a id="form-forgot-password" asp-controller="Auth" asp-action="Forgot">Forgot your password?</a>
            </div>

           
        </form>
    </div>
</section>
